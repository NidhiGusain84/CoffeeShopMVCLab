@model List<Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Available Products:</h1>

@foreach (Product item in Model)
{
    <div>
        <a href="/Admin/Description?id=@item.id">@item.name</a>
        <a href="/Admin/UpdateForm?id=@item.id" class="btn btn-primary">Edit</a>
        <a href="/Admin/DeleteConfirmation?id=@item.id&name=@item.name
           &description=@item.description&price=@item.price
           &category=@item.category" class="btn btn-danger">Delete</a>

    </div> 
    
}


<a href="/Admin/ProductForm" class="btn btn-primary">Add Product</a>